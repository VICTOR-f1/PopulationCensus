@model RegistrationViewModel
@{
    Layout = "/Views/Shared/_LayoutHeaderOnly.cshtml";
}
   <head>
    <link rel="shortcut icon" href="/favicon.png" type="image/png">
    <link rel="stylesheet" href="/styles/registration.css">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <title>@ViewBag.Title</title>
   </head>
   <body>
     <div class="container-fluid px-1 py-5 mx-auto main-container">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <div class="card shadow-lg">
                    <h5 class="text-center mb-4 title">Регистрация </h5>
                    <form class="form-card" method="POST">                      
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="Fullname" class="form-control-label"></label>
                                <input id="YearBirthFirstChild" asp-for="Fullname">
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="Email" class="form-control-label"></label>
                                <input asp-for="Email" type="email" >
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="Password" class="form-control-label"></label>
                                <input  type="password" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="RepeatPassword" class="form-control-label"></label>
                                <input asp-for="RepeatPassword" type="password">
                                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="line"></div>
                        <h5 class="sub-title">Персональная информация</h5>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="PhoneNumber" class="form-control-label"></label>
                                <input  asp-for="PhoneNumber">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="DateOfBirth" class="form-control-label"></label>
                                <input asp-for="DateOfBirth">
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="line"></div>
                        <h5 class="sub-title">Адресс</h5>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="State" class="form-control-label"></label>
                                <input asp-for="State">
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="Street" class="form-control-label"></label>
                                <input asp-for="Street">
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="ApartmentNumber" class="form-control-label"></label>
                                <input asp-for="ApartmentNumber">
                                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label asp-for="ZipCode" class="form-control-label"></label>
                                <input asp-for="ZipCode">
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                        </div>
                  
                        <div class="row justify-content-end">
                            <div class="form-group col-sm-6">
                                <div class="text-danger" asp-validation-summary="None">@ViewBag.modelError</div>
                                <button type="submit" class="btn-block main-btn btn-primary">Создать акаунт</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
     </div>
   </body>
